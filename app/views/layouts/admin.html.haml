!!! DOCTYPE

%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang =>"en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = @page_title || "#{controller.controller_name} : #{controller.action_name}"
      | Owl
    = stylesheet_link_tag 'reset-fonts','shared','admin', :media => 'all'#, :cache => true
    = javascript_include_tag 'prototype','effects','application'
    = yield :head  # if you want to add any other code to the head, add it via `content_for :head do` in any view and it'll end up here
      
  %body
    - if flash[:notice]
      #notice
        %div
          = flash[:notice]
          :javascript
            setTimeout(function() { Effect.SlideUp('notice', { duration:0.5 }) }, 5000);
      
    = link_to '&laquo; Back to Dashboard', { :controller => 'dashboard' }, :class => 'back'
    = yield
    = yield :body
