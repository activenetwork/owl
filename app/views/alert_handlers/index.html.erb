<h1>Listing alert_handlers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class name</th>
    <th>Description</th>
  </tr>

<% @alert_handlers.each do |alert_handler| %>
  <tr>
    <td><%=h alert_handler.name %></td>
    <td><%=h alert_handler.class_name %></td>
    <td><%=h alert_handler.description %></td>
    <td><%= link_to 'Show', alert_handler %></td>
    <td><%= link_to 'Edit', edit_alert_handler_path(alert_handler) %></td>
    <td><%= link_to 'Destroy', alert_handler, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New alert_handler', new_alert_handler_path %>